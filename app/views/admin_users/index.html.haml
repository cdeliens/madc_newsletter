#page-wrapper
  %h1
    Administradores
  .panel.panel-warning{"data-widget" => "{\"draggable\": \"false\"}", "data-widget-static" => ""}
    .panel-body.no-padding
      .widget3.pull-right
        = link_to_icon(" Nuevo", new_admin_user_path, "glyphicon glyphicon-plus-sign")
      %table.table.table-striped
        %thead
          %tr.warning
            %th Id
            %th Nombre
            %th Usuario
            %th Acciones
        %tbody
          - @admin_users.each do | user |
            %tr
              %td= user.id
              %td= user.first_name
              %td= user.email
              %td
                .btn-group
                  = link_to_icon(" Editar", edit_admin_user_path(user), "glyphicon glyphicon-edit", "btn btn-primary")
                  = link_to((content_tag(:i, "", class: "glyphicon glyphicon-trash") + " Borrar"), user, method: "delete", class: "btn btn-danger", :data => { :confirm => "Â¿Seguro que desea borrar?"})
