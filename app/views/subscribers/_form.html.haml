= simple_form_for(@subscriber, html: { class: 'form-horizontal', method: method }) do |f|
  = f.error_notification message: @subscriber.errors.full_messages.join(', ')
  .form-group
    = f.label :first_name, class: 'col-sm-2 control-label'
    .col-sm-8
      = f.input_field :first_name, class: 'form-control1'
  .form-group
    = f.label :last_name, class: 'col-sm-2 control-label'
    .col-sm-8
      = f.input_field :last_name, class: 'form-control1'
  .form-group
    = f.label :email, class: 'col-sm-2 control-label'
    .col-sm-8
      = f.input_field :email, class: 'form-control1'
  .form-group
    = f.label :phone_number, class: 'col-sm-2 control-label'
    .col-sm-8
      = f.input_field :phone_number, class: 'form-control1'
  .form-group
    = f.label :id_number, class: 'col-sm-2 control-label'
    .col-sm-8
      = f.input_field :id_number, class: 'form-control1'
  -if method != :disable
    .row
      .col-sm-8.col-sm-offset-2
        = f.submit 'Save', class: "btn btn-success"
