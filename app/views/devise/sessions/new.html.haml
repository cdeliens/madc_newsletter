%section
  #page-wrapper.sign-in-wrapper
    .graphs
      .sign-in-form
        .sign-in-form-top
          %p
            %span MADC Newsletter
        .signin
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .log-input
              .log-input-left
                = f.email_field :email, autofocus: true, class: "user", :type => "text", :placeholder => "Email"
              .clearfix
            .log-input
              .log-input-left
                = f.password_field :password, autocomplete: "off", :type => "password", placeholder: "Password", class: 'lock'
              .clearfix
            = f.submit "Log in"
            -# = render "devise/shared/links"
  / footer section start

  / footer section end
