= simple_form_for(@template, html: { class: 'form-horizontal', method: method }) do |f|
  .form-group
    = f.label :Nombre, class: 'col-sm-2 control-label'
    .col-sm-8
      = f.input_field :title, class: 'form-control1'
  .form-group
    = f.label :HTML, class: 'col-sm-2 control-label'
    .col-sm-8
      = f.input_field :html_body, class: 'form-control1'
  -if method != :disable
    .row
      .col-sm-8.col-sm-offset-2
        = f.submit 'Guardar', class: "btn btn-success"
